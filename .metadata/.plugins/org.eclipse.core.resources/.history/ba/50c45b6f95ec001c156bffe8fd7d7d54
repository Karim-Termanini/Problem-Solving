import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int counter = in.nextInt();
		int space = counter-1;
		for(int i=1;i<=counter;i++) {
			for(int j=1;j<=space;j++) {
				System.out.print(" ");
			}
			for(int k = 0;k<=i*2;k++) {
				System.out.print("*");
			}
			System.out.println();
			space--;
		}
	}
}
