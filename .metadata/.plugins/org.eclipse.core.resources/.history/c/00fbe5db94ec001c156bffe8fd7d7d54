import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int counter = in.nextInt();
		for(int i=1;i<=counter;i++) {
			for(int j=i;j<=counter;j++) {
				System.out.print("*");
			}
			for(int k=1;k<=i+2;k++) {
				System.out.print("+");
			}
			System.out.println();
		}
	}
}
